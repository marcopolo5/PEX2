<Window x:Class="StudentCarduri.FormularStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentCarduri"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="FormularStudent" Height="450" Width="800">
    <Grid>
        <Label
            Content="Form zone"
            HorizontalAlignment="Center"
            Width="Auto"
            Height="Auto"
            VerticalAlignment="Top"
            FontFamily="Meltix"
            FontSize="30"
            FontWeight="SemiBold"
            >
        </Label>
        <Label
            Content="*Please complete all the fields required"
            Width="Auto"
            Height="Auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Margin="290,44,296,0"
            FontWeight="SemiBold"
            >
        </Label>
        <Label>
            <TextBlock
                x:Name="TextBlock"
                Height="Auto"
                Width="Auto"
                Margin="10,80,0,0"
                FontFamily="Meltix"
                FontSize="12"
                FontWeight="SemiBold"
                >
                <Run Text="Subsemnatul/a "/>
                <InlineUIContainer> 
                    <Label
                        x:Name="numeU"
                        Width="Auto"
                        Height="Auto"
                        FontWeight="SemiBold"
                        Margin="0,-10,0,-6"
                    />
                </InlineUIContainer>
                <Run Text=", avand adresa de email "/>
                <InlineUIContainer>
                    <Label
                        Width="Auto"
                        Height="Auto"
                        x:Name="email"
                        Margin="0,-10,0,-6"
                        FontWeight="SemiBold"
                        >
                    </Label>
                </InlineUIContainer>
                              
                <Run Text=", sunt student in "/>
                <ComboBox
                    Background="Transparent"
                    Width="Auto"
                    Height="Auto"
                    materialDesign:HintAssist.Hint="Selectati anul"
                    Margin="0,-10,0,-7"
                    BorderThickness="0"
                    >
                    <ComboBoxItem Content="anul 1"></ComboBoxItem>
                    <ComboBoxItem Content="anul 2"></ComboBoxItem>
                    <ComboBoxItem Content="anul 3"></ComboBoxItem>
                    <ComboBoxItem Content="master an 1"></ComboBoxItem>
                    <ComboBoxItem Content="master an 2"></ComboBoxItem>
                </ComboBox>
                <Run Text=" , la facultatea "/>
                <ComboBox 
                    Width="Auto"
                    Height="Auto"
                    Margin="0,-10,0,-7"
                    BorderThickness="0"
                    Background="Transparent"
                    materialDesign:HintAssist.Hint="Selectati faculatea"
                    >
                    <ComboBoxItem Content="de Stiinte"></ComboBoxItem>
                    <ComboBoxItem Content="de Medicina"></ComboBoxItem>
                    <ComboBoxItem Content="de Litere"></ComboBoxItem>
                    <ComboBoxItem Content="de Inginerie"></ComboBoxItem>
                    <ComboBoxItem Content="de Drept"></ComboBoxItem>
                </ComboBox>
                <LineBreak></LineBreak>
                <LineBreak></LineBreak>
                <Run Text="solicit cazare in caminul: "/>
                <Button
                    Height="30"
                    Width="100"
                    Content="Harta"
                    Foreground="Black"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="-30,-10,0,-12"
                    FontSize="11"
                    FontStyle="Normal"
                    FontWeight="Normal"
                    Click="goto_HartaClick"
                    >
                </Button>
                <LineBreak>
                    
                </LineBreak>
                
                <Label
                    Content="Data,"
                    Margin="0,0,0,0"
                    Height="20"
                    Width="40"
                    >
                </Label>
                <DatePicker
                    Margin="0,90,89,-30"
                    BorderThickness="0"
                    >
                </DatePicker>
            </TextBlock>
        </Label>
        <StackPanel VerticalAlignment="Center" Margin="0,254,9.6,80" HorizontalAlignment="Right" Width="774" Height="86">

            <StackPanel>

                <TextBlock 
                FontWeight="SemiBold"
                FontSize="15" 
                Text="{Binding camin.nume,  StringFormat= ' Ati optat pentru: {0}'}"
                Margin="0,10,0.4,0" Height="25" 
                />
                <TextBlock 
                FontWeight="SemiBold" 
                FontSize="15"  
                Text="{Binding camera.nr_camera , StringFormat= ' Camera cu numarul: {0}'}" 
                Margin="0,10,0.4,0" Height="37" 
                />

            </StackPanel>
        </StackPanel>
        <StackPanel>
            <Button Content="Submit"
                Foreground="Black"
                FontSize="14"
                Margin="350,350,350,0"
                FontWeight="Medium"
                Background="Transparent"/>
        </StackPanel>
    </Grid>
</Window>
